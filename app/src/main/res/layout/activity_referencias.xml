<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Referencias">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarReferencias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_red"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="REFERÊNCIAS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarReferencias">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnImagem1"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginHorizontal="20dp"
                        android:backgroundTint="@color/dark_red"
                        android:text="Imagem da 1ª tela"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:cornerRadius="50dp" />

                    <TextView
                        android:id="@+id/creditosWork"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:justificationMode="inter_word"
                        android:text="Work illustrations by Storyset"
                        android:textColor="@color/dark_red"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnImagem3"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginHorizontal="20dp"
                        android:backgroundTint="@color/dark_red"
                        android:text="Imagem da 3ª tela"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:cornerRadius="50dp" />

                    <TextView
                        android:id="@+id/creditosPeople"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:justificationMode="inter_word"
                        android:text="People illustrations by Storyset"
                        android:textColor="@color/dark_red"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnImagemCPU"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginHorizontal="20dp"
                        android:backgroundTint="@color/dark_red"
                        android:text="Imagem da CPU"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:cornerRadius="50dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnImagemRAM"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginHorizontal="20dp"
                        android:backgroundTint="@color/dark_red"
                        android:text="Imagem da Memória"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:cornerRadius="50dp" />

                    <TextView
                        android:id="@+id/creditosFreepik2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:justificationMode="inter_word"
                        android:text="Imagem de Freepik"
                        android:textColor="@color/dark_red"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnImagemHD"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginHorizontal="20dp"
                        android:backgroundTint="@color/dark_red"
                        android:text="Imagem do HD"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:cornerRadius="50dp" />

                    <TextView
                        android:id="@+id/creditosMaximBasinskiPremium"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:justificationMode="inter_word"
                        android:text="Hard disk icons created by Maxim Basinski Premium - Flaticon"
                        android:textColor="@color/dark_red"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnImagemGPU"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginHorizontal="20dp"
                        android:backgroundTint="@color/dark_red"
                        android:text="Imagem da GPU"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:cornerRadius="50dp" />

                    <TextView
                        android:id="@+id/creditosTaufikRamadhan"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:justificationMode="inter_word"
                        android:text="Graphic card icons created by Taufik Ramadhan - Flaticon"
                        android:textColor="@color/dark_red"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnBalancoSocial"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginHorizontal="20dp"
                        android:backgroundTint="@color/dark_red"
                        android:text="Balanço Social 2021"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:cornerRadius="50dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnSobreUNISAGRADO"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginHorizontal="20dp"
                        android:backgroundTint="@color/dark_red"
                        android:text="Sobre UNISAGRADO"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:cornerRadius="50dp" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>