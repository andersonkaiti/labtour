<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SobreUNISAGRADO">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSobreUNISAGRADO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_red"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="SOBRE O UNISAGRADO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageUNISAGRADO"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@color/dark_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarSobreUNISAGRADO"
        app:srcCompat="@drawable/institucional_topo_2021_ok" />

    <TextView
        android:id="@+id/rede"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:justificationMode="inter_word"
        android:text="O UNISAGRADO é uma IES que possui um campus com diversos laboratórios de computação e tem como objetivo desenvolver a pesquisa e a extensão universitária, contribuindo para o desenvolvimento da região e formando profissionais capazes de atuar de forma responsável e ética em suas respectivas áreas de atuação."
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSaibaMais"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageUNISAGRADO" />

    <Button
        android:id="@+id/btnSaibaMais"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/dark_red"
        android:text="Saiba mais"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rede" />
</androidx.constraintlayout.widget.ConstraintLayout>