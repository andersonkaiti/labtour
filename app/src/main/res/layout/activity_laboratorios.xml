<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_white"
    tools:context=".Laboratorios">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarLaboratorios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_red"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="LABORATÓRIOS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarLaboratorios">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/cardSala1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/sala1"
                        android:layout_width="wrap_content"
                        android:layout_height="270dp"
                        android:background="@color/dark_red"
                        app:srcCompat="@drawable/f108" />

                    <TextView
                        android:id="@+id/f108"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/dark_red"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="F108"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardSala2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/sala2"
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:background="@color/dark_red"
                        app:srcCompat="@drawable/f109" />

                    <TextView
                        android:id="@+id/f109"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/dark_red"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="F109"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardSala3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/sala3"
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:background="@color/dark_red"
                        app:srcCompat="@drawable/f111" />

                    <TextView
                        android:id="@+id/f111"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/dark_red"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="F111"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardSala4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/sala4"
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:background="@color/dark_red"
                        app:srcCompat="@drawable/f113" />

                    <TextView
                        android:id="@+id/f113"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/dark_red"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="F113"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardRede"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        app:cardCornerRadius="25dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/dark_red"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageRede"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/rede" />

                            <TextView
                                android:id="@+id/textRede"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:background="@color/dark_red"
                                android:gravity="center"
                                android:text="REDE"
                                android:textColor="@color/white"
                                android:textSize="30sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardConfiguracoes"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        app:cardCornerRadius="25dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/dark_red"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageConfiguracoes"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/configuracoes" />

                            <TextView
                                android:id="@+id/textConfiguracoes"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:background="@color/dark_red"
                                android:gravity="center"
                                android:text="CONFIGURAÇÕES"
                                android:textColor="@color/white"
                                android:textSize="30sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardTermos"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        app:cardCornerRadius="25dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/dark_red"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageTermos"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/unisagrado" />

                            <TextView
                                android:id="@+id/textTermos"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:background="@color/dark_red"
                                android:gravity="center"
                                android:text="TERMOS"
                                android:textColor="@color/white"
                                android:textSize="30sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>